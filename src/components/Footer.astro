import FooterLogo from "@assets/logos/footer-logo.png";
---

<footer
  class="relative w-full py-4 bg-black flex flex-col md:flex-row justify-center items-center md:px-10"
>
  <div class="mb-2 md:mb-0">
    <Image src={FooterLogo} alt="Image of the footer logo" class="w-40" />
  </div>
  <ul
    class="flex md:flex-row flex-col justify-center items-center gap-1 md:gap-0 mb-2 md:mb-0"
  >
    <li class="flex items-center justify-center">
      <p class="text-white text-[13px]">
        Â©2024 Your Company. All rights reserved.
      </p>
      <span class="text-white mx-2 hidden md:block">|</span>
    </li>
    <li class="flex items-center justify-center">
      <a
        href="http://"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white text-[13px] duration-300 transition-colors hover:text-[#e8bb78]"
      >
        Terms of Service</a
      >
      <span class="text-white mx-2 hidden md:block">|</span>
    </li>
    <li class="flex items-center justify-center">
      <a
        href="http://"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white text-[13px] duration-300 transition-colors hover:text-[#e8bb78]"
      >
        Privacy Policy</a
      >
    </li>
  </ul>
  <div class="md:ml-6">
    <a
      href="http://"
      target="_blank"
      rel="noopener noreferrer"
      class="flex justify-center items-center"
    >
      <svg
