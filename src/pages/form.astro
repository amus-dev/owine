---
import Footer from "@components/Footer.astro";
import FormComponent from "@components/Form.tsx";
import Layout from "@layouts/Layout.astro";

import { Image } from "astro:assets";
import ImageLogo from "@assets/logos/form-logo.webp";
---

<Layout title="OWINE - Form">
  <main>
    <section
      class="relative bg-[url(/owine/assets/home-bg.webp)] bg-no-repeat bg-cover bg-center flex items-center py-[40px] flex-col px-6"
    >
      <Image
        class="w-[330px] animate-fade-in animate-delay-100 animate-duration-600"
        src={ImageLogo}
        alt="Image of the form logo"
      />
      <h1
        class="text-white font-cheddar text-center lg:text-start text-[30px] lg:text-[42px] tracking-[4.2px] animate-fade-in animate-delay-100 animate-duration-600"
      >
        Can your story inspire Ami James?
      </h1>
      <p
        class="text-white font-open-sans-light text-center lg:text-start text-[20px] lg:text-[28px] animate-fade-in animate-delay-100 animate-duration-600"
      >
        Participate for a chance to WIN a tattoo session with Ami James
      </p>
      <FormComponent client:only />
      <div
        class="bg-[url(/owine/assets/border-btn-follow-form.png)] bg-cover bg-center bg-no-repeat mt-6 animate-fade-in animate-delay-100 animate-duration-600 w-[320px] h-[53px] lg:w-[380px] lg:h-[63px] flex justify-center items-center"
      >
        <a
          href="/form"
          class="font-cheddar text-white text-[20px] lg:text-[29px] rounded-xl p-2 duration-300 transition-colors hover:text-[#edd78b] tracking-[4px]"
          >Follow us on instragram</a
        >
      </div>
    </section>
  </main>
  <Footer position="relative" />
</Layout>
