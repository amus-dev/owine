---
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import ImageLogo from "@assets/logos/form-logo.webp";
import IconCheck from "@assets/images/thanks_icono_OK_Interior.svg";
import Wines from "@assets/images/bottles_wine.png";
---

<Layout title="OWINE - Congrats">
  <main>
    <div
      class="relative w-full bg-[url(/owine/assets/thanks-bg.webp)] bg-no-repeat bg-cover bg-center flex items-center py-20 md:py-[74px] flex-col px-6"
    >
      <Image
        class="w-[320px] animate-fade-in animate-delay-100 animate-duration-600"
        src={ImageLogo}
        alt="Image of a wine bottle and a glass with the text 'OWINE' on it."
      />

      <div
        class="flex flex-col justify-center items-center animate-fade-in animate-delay-400 animate-duration-800"
      >
        <Image
          class="w-[200px] mt-10 mb-4"
          src={IconCheck}
          alt="Image of a wine bottle and a glass with the text 'OWINE' on it."
        />
        <h1 class="font-cheddar text-[65px] text-white tracking-[4px]">
          Thank you!
        </h1>
        <p
          class="text-2xl text-white font-open-sans-light tracking-[4px] text-center mt-4"
        >
          Remember to follow us <br /> on Instagram to validate your entry.
        </p>
        <div
          class="bg-[url(/owine/assets/bg-border.jpeg)] rounded-2xl py-4 px-2 mt-10"
        >
          <a
            href="/form"
            class="font-cheddar text-white text-2xl rounded-xl bg-[#000] p-2 duration-300 transition-colors hover:text-[#edd78b] tracking-[4px]"
            >Follow us on instragram</a
          >
        </div>
      </div>
    </div>

    <!-- Elemento flotante -->
    <div
      class="absolute -bottom-10 image-wines animate-fade-in-up animate-delay-400 animate-duration-800"
    >
      <Image
        class="w-[280px]"
        src={Wines}
        alt="Images of wine bottles and glasses."
      />
    </div>
  </main>
  <Footer />
</Layout>
