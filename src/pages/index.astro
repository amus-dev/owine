---
import Wines from "@assets/images/bottles_wine.png";
import ImageLogo from "@assets/logos/home-logo.webp";
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout
  title="Ö-61 - Home"
  description="Discover the elegance and flavor of our exclusive wine bottles with Ö-61"
>
  <main class="animate-fade-in animate-delay-400 animate-duration-800">
    <div
      class="relative overflow-hidden 2xl:h-[92vh] w-full bg-[url(/owine/assets/home-bg.webp)] bg-no-repeat bg-cover bg-center flex items-center py-20 md:py-[74px] flex-col px-6"
    >
      <Image
        class="w-full max-w-[200px]"
        src={ImageLogo}
        alt="Logo of a wine bottle and a glass with the text 'OWINE' on it."
      />
      <h1
        class="text-white font-cheddar text-[34px] mt-10 text-center text-pretty"
      >
        You have to be of legal drinking age
      </h1>
      <h2 class="text-white font-cheddar text-[60px] md:text-[115px]">
        Are you?
      </h2>

      <div class="flex gap-10 justify-center items-center mb-10 md:mb-16">
        <div
          class="bg-[url('/owine/assets/border-btn-yes.png')] bg-cover bg-center bg-no-repeat w-[125px] h-[64px] flex justify-center items-center"
        >
          <a
            id="btnYes"
            href={`${import.meta.env.BASE_URL}/form`}
            class="font-cheddar text-white text-[32px] bg-black duration-300 transition-colors hover:text-[#edd78b]"
            >Yes</a
          >
        </div>
        <div
          class="bg-[url('/owine/assets/border-btn-yes.png')] bg-cover bg-center bg-no-repeat w-[125px] h-[64px] flex justify-center items-center"
        >
          <a
            id="btnYes"
            href="https://www.google.com/"
            class="font-cheddar text-white text-[32px] bg-black duration-300 transition-colors hover:text-[#edd78b]"
            >No</a
          >
        </div>
      </div>

      <!-- Elemento flotante -->
      <div
        class="absolute -bottom-10 image-wines animate-slide-in-up animate-delay-400 animate-duration-800"
      >
        <Image
          class="w-[280px]"
          src={Wines}
          alt="Images of wine bottles and glasses."
        />
      </div>
    </div>
    <Footer />
  </main>
</Layout>
